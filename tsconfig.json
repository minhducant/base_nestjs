{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "types": ["node", "Multer"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "../../node_modules/@types"]
  }
}
